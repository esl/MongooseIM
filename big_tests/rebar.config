%% We use https:// instead of git://
{deps, [
        {exml, "4.1.2", {pkg, hexml}},
        {bbmustache, "1.12.2"},
        {jiffy, "1.1.2"},
        {proper, "1.4.0"},
        {gun, "2.1.0"},
        {fusco, "0.1.1"},
        {escalus, "4.5.5"},
        {ranch, "2.2.0"},
        {cowboy, "2.13.0"},
        {csv, "3.0.3", {pkg, csve}},
        {amqp_client, "4.2.1"},
        {esip, "1.0.57"},
        {jid, "2.2.0", {pkg, mongoose_jid}},
        {ct_groups_summary_hook, "0.1.1"},
        {wait_helper, "0.2.2"}
]}.

{dialyzer, [
        {warnings, [unknown]},
        {plt_extra_apps, [mongooseim, common_test, exml, eldap, eunit, wait_helper,
                          jid, cowboy, cowlib, lasse, p1_utils, ranch, gen_fsm_compat, epgsql, cqerl,
