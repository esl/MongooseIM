{erl_opts, [debug_info,
            {i, ["include"]},
            {d, xml_nif},
            {parse_transform, lager_transform}]}.

{require_otp_vsn, "1[789]"}.

{port_specs,
 [{".*", "priv/lib/ejabberd_zlib_drv.so", ["c_src/ejabberd_zlib_drv.c"], [{env, [{"LDFLAGS", "$LDFLAGS -lz"}]}]}]
