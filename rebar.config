{erl_opts, [debug_info,
            {i, ["include"]}]}.

{require_otp_vsn, "R1[45]"}.

{so_specs,
 [{"priv/lib/tls_drv.so",
   ["c_src/tls_drv.o"]},
  {"priv/lib/epam.so",
    ["c_src/epam.o"]},
  {"priv/lib/ejabberd_zlib_drv.so",
   ["c_src/ejabberd_zlib_drv.o"]},
  {"priv/lib/sha_drv.so",
   ["c_src/sha_drv.o"]},
  {"priv/lib/expat_erl.so",
   ["c_src/expat_erl.o"]}
 ]}.

{port_envs,
 [{"LDFLAGS", "$LDFLAGS -module -lssl -lz -lpam -lcrypto -lexpat"}]}.

{sub_dirs, ["apps/ejabberd", "apps/stringprep", "apps/mysql", "rel"]}.

{deps, [
    {cuesport, ".*", {git, "git://github.com/goj/cuesport.git", {branch, "master"}}},
    {redo, ".*", {git, "git://github.com/JacobVorreuter/redo.git", {branch, "master"}}}
]}.

{pre_hooks, [{compile, "make generate_snmp_header"}]}.
