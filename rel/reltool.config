{sys, [
       {lib_dirs, ["../apps"]},
       {incl_cond, exclude},
       {rel, "ejabberd", "0.1",
        [
         compiler,
         crypto,
         ejabberd,
         kernel,
         mnesia,
         public_key,
         sasl,
         ssl,
         stdlib,
         stringprep,
         mysql
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "ejabberd"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, compiler, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, ejabberd, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, mnesia, [{incl_cond, include}]},
       {app, public_key, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]},
       {app, snmp, [{incl_cond, include}]},
       {app, ssl, [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, stringprep, [{incl_cond, include}]},
       {app, runtime_tools, [{incl_cond, include}]},
       {app, mysql, [{incl_cond, include}]}
      ]}.

{target_dir, "ejabberd"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/ejabberd", "bin/ejabberd"},
           {copy, "files/app.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"},
           {copy, "files/ejabberd.cfg", "etc/ejabberd.cfg"},
           {copy, "files/ejabberdctl", "bin/ejabberdctl"},
           {mkdir, "var"}
          ]}.
